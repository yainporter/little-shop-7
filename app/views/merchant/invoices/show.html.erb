<h1>Invoice #<%= @invoice.id %></h1>
<p>Status: <%= @invoice.status %></p>
<p>Created on: <%= @invoice.format_date_created %></p>
<p>Total Revenue: <%= @invoice.format_total_revenue %></p>
<p>Total Discounted Revenue: <%= @invoice.format_total_revenue_with_discounts %></p>
<h2>Customer: <%= @invoice.customer.full_name  %></h2>
<h3>Items on this Invoice:</h3>
<table>
  <tr>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Status</th>
    <th>Update Status</th>
    <th>Discount</th>
  </tr>
<% @invoice.invoice_items.each do |invoice_item| %>
  <div id="invoice_item-<%= invoice_item.id %>">
    <tr>
      <td><%= invoice_item.item.name %></td>
      <td><%= invoice_item.quantity %></td>
      <td><%= invoice_item.format_unit_price %></td>
      <td><%= invoice_item.status %></td>
      <td>
        <%= form_with url: merchant_invoice_item_path(params[:merchant_id], invoice_item.id),
                      method: :patch,
                      data: { turbo: false } do |f| %>
          <%= f.label :status %>
          <%= f.select :status, ["Pending", "Packaged", "Shipped"], selected: invoice_item.status %>
          <%= f.submit "Submit" %>
        <% end %>
      </td>
      <% if invoice_item.has_discount? %>
      <td><%= link_to 'Yes', merchant_bulk_discount_path(params[:merchant_id], invoice_item.bulk_discount_id), data: { turbo_method: :get } %></td>
      <% else %>
      <td>No</td>
      <% end %>
    </tr>
  </div>
<% end %>
</table>
